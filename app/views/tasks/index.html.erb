<h1>Your Tasks</h1>
<%= link_to "Create a new task", tasks_new_path %>
<ul>
  <% @tasks.each do |task|%>
  <li><%= link_to task.title, task_path(task) %> - <%= task.details %> - completed: <%= task.completed %></li>
  <li><%= link_to "Delete", delete_task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></li>
  <br><br>
  <% end %>
</ul>
